extends layout-dark

block content
  .register-page
    .register-form-wrapper.col-12
      h4(style="text-align:center;") Proccess Registration Step
      p(style="text-align:center;text-transform: capitalize;") to order #{selectpackage} Package
      form(method='post', class="register-form", action='/registration')
          div.form-group
            label(for='name') Name:
            input#name.form-control(type='text', placeholder='Full Name' name='name')
          div.form-group
            label(for='email') Email:
            input#email.form-control(type='email', placeholder='name@email.com' name='email')
          div.form-group
            label(for='phone') Phone:
            input#phone.form-control(type='phone', placeholder='021++++++' name='phone')
            input#package.form-control(type='hidden', name='package' value={selectpackage})
          div.form-group
            label(for='address') Address:
            textarea#address.form-control(rows="5" name="address")
          input.btn.btn-primary(class='nusa-button', type='submit',value='SUBMIT')